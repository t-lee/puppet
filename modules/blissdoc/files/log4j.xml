<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    
    <appender name="FILE" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="/var/log/blissdoc.log"/>
        <param name="Append" value="false"/>
        <param name="encoding" value="UTF-8"/>

        <param name="DatePattern" value="'.'yyyy_MM_dd"/>

        <layout class="org.apache.log4j.PatternLayout">
            <param
                name="ConversionPattern"
                value="%d{dd-MM-yyyy-HH:mm:ss,SSS} [%15.15t] %-5p %48.48c - %m%n"/>
        </layout>
    </appender>
    
    <logger name="org.springframework">
        <level value="info"/> 
    </logger>
    <logger name="org.hibernate">
        <level value="info"/> 
    </logger>
    <logger name="de.devbliss.doc">
        <level value="debug"/> 
    </logger>
    <logger name="de.devbliss.doc.search">
        <level value="info"/> 
    </logger>
    <logger name="inti.ws.spring">
        <level value="info"/> 
    </logger>

    <root>
        <priority value="error"/>
        <appender-ref ref="FILE"/>
    </root>

</log4j:configuration>
